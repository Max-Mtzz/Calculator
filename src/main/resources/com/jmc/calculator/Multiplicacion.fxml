<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jmc.calculator.Multiplicacion"> <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
</padding>

    <Label fx:id="welcomeText" />

    <HBox alignment="CENTER" spacing="10.0">
        <TextField fx:id="numero1_fld" promptText="Número 1" />
        <TextField fx:id="numero2_fld" promptText="Número 2" />
    </HBox>

    <HBox alignment="CENTER" spacing="10.0">
        <Button onAction="#regresar_multiplicacion" text="Regresar" />
        <Button onAction="#multiplicar" text="Multiplicar" />
    </HBox>

    <Label fx:id="resultado_lbl" text="Resultado: " />
   <Label />
</VBox>
